<Window
    x:Class="LotteryApp.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Settings">
    <StackPanel Margin="20">
        <TextBlock Text="Number Range" FontSize="14" FontWeight="Bold" Margin="0,20,0,10"/>
        <StackPanel Orientation="Vertical" Spacing="10" HorizontalAlignment="Left">
            <TextBox x:Name="startNumber_TxtBox" Width="300" Text="0"/>
            <TextBox x:Name="endNumber_TxtBox" Width="300" Text="500"/>
            <Button x:Name="ApplyRange_Btn" Content="Apply" Click="ApplyRange_Btn_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
