<Window
    x:Class="LotteryApp.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Settings">
    <StackPanel Margin="20">
        <TextBlock Text="Adjust Border Margin" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBlock Text="Top:" VerticalAlignment="Center"/>
            <Slider x:Name="TopMarginSlider" Minimum="0" Maximum="1000" Width="300" ValueChanged="MarginSlider_ValueChanged"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
            <TextBlock Text="Left:" VerticalAlignment="Center"/>
            <Slider x:Name="LeftMarginSlider" Minimum="0" Maximum="1000" Width="300" ValueChanged="MarginSlider_ValueChanged"/>
        </StackPanel>

        <TextBlock Text="Adjust Border Size" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBlock Text="Width:" VerticalAlignment="Center"/>
            <Slider x:Name="WidthSlider" Minimum="0" Maximum="1000" Width="300" ValueChanged="SizeSlider_ValueChanged"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
            <TextBlock Text="Height:" VerticalAlignment="Center"/>
            <Slider x:Name="HeightSlider" Minimum="0" Maximum="1000" Width="300" ValueChanged="SizeSlider_ValueChanged"/>
        </StackPanel>

        <TextBlock Text="Text Color" FontSize="14" FontWeight="Bold" Margin="0,20,0,10"/>
        <ColorPicker x:Name="TextColorPicker" ColorChanged="TextColorPicker_ColorChanged" Width="250" Height="250"/>
    </StackPanel>
</Window>
